@page "/todoItems"
@inject NavigationManager NavigationManager

<PageTitle>To Do Items</PageTitle>

<h3>TodoItems</h3>

<table class="table" width="100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Date
            </th>
            <th>
                Priority
            </th>
            <th>
                Done
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (_todoItems != null)
        {
                    @foreach (var todoItem in _todoItems)
        {
            <tr>
                <td>
                    @todoItem.Name
                </td>
                <td>
                    @todoItem.Description
                </td>
                <td>
                    @todoItem.DateAndTime
                </td>
                <td>
                    @todoItem.Priority
                </td>
                <td>
                    @todoItem.isDone
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <button class="btn btn-dark mx-2 text-center" @onclick="(() => ShowTodo(todoItem.Id))">
                            <i class="oi oi-pencil"></i> &nbsp; Edit
                        </button>
                        <button class="btn btn-danger mx-2 text-center">
                            <i class="oi oi-trash"></i> &nbsp; Delete
                        </button>
                    </div>
                </td>
            </tr>
        }
        }
    </tbody>
</table>
<button class="btn btn-primary" @onclick="CreateNewTask">Add new Task</button>

@code {
